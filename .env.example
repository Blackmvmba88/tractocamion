# Database
DATABASE_URL=postgresql://usuario:password@localhost:5432/tractocamion

# Server
PORT=3000
NODE_ENV=development

# App Config
AUTO_REFRESH_INTERVAL=5000

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Security
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCK_TIME_MINUTES=15
CORS_ORIGIN=*

# Business Configuration - Earnings
BASE_RATE_PER_HOUR=50
EFFICIENCY_BONUS_THRESHOLD=60
EFFICIENCY_BONUS=20

# Business Configuration - Performance
TARGET_CYCLE_TIME=55
EFFICIENCY_THRESHOLD=60

# Business Configuration - Alerts
FATIGUE_THRESHOLD_HOURS=8
DELAYED_CYCLE_THRESHOLD_HOURS=2
EXTENDED_REST_THRESHOLD_HOURS=4

# Pagination
DEFAULT_LIMIT=50
MAX_LIMIT=100
